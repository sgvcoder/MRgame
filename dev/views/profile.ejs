<!-- views/profile.ejs -->
<% include ./layers/header.ejs %>

<div class="container">

	<div class="row">

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-6">
			<div class="well">
				<h3><span class="fa fa-user"></span> Local</h3>

					<p>
						<strong>id</strong>: <%= user.id %><br>
						<strong>login</strong>: <%= user.username %><br>
						<strong>registered</strong>: <%= user.date %>
					</p>

			</div>
		</div>

		<!-- Navigations -->
		<div class="col-sm-6">
			<div class="thumbnail">
				<div class="caption">
					<h3>Game...</h3>
					<p>...</p>
					<p>
						<a href="/game" class="btn btn-primary" role="button" id="start">Start Game!</a>
						<span id="game"></span>
					</p>
				</div>
			</div>
		</div>

	</div>

</div>
	
<% include ./layers/footer.ejs %>

<%- script('/js/profile.js') %>